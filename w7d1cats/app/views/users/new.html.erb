<form action="<%= users_url %>" method="post">
  <input type="hidden" name="_method" value="post">
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li>
      <%= msg %>
    </li>
    <% end %>
  </ul>
  <label for="user_name">Username:
    <input type="string" id="user_name" name="user[user_name]" value="<%=@user.user_name %>">
  </label>
  <label for="password">Password:
    <input type="password" id="password" name="user[password]" value="<%=@user.password %>">
  </label>

  <input type="submit" value="Sign Up">

</form>